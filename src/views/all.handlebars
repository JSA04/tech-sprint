<h2>Todas as Ideias:</h2>

{{#if error}}
  <div class="alert alert-danger">{{error}}</div>
{{/if}}

{{#if ideas.length}}
  <div class="actions">
    <a href="/ideas/new" class="btn btn-primary">Nova Ideia</a>
  </div>
  <div class="ideas-grid">
    {{#each ideas}}
      <div class="idea-card status-{{this.status}}">
        <h3>{{this.title}}</h3>

        <div class="idea-category">
          ğŸ“
          {{this.category.name}}
        </div>

        <div class="idea-description">
          {{this.description}}
        </div>

        <div class="idea-status">
          Status:
          <span class="status-badge {{this.status}}">{{this.status}}</span>
        </div>

        <div class="idea-info">
          <small>Criada em: {{formatDate this.createdAt}}</small>
        </div>

        <div class="idea-actions">
          <a
            href="/ideas/{{this.id}}/edit"
            class="btn btn-sm btn-outline-primary"
          >âœï¸ Editar</a>
          <form
            style="display:inline;"
            method="POST"
            action="/ideas/{{this.id}}?_method=DELETE"
          >
            <button
              type="submit"
              class="btn btn-sm btn-outline-danger"
              onclick="return confirm('Tem certeza que deseja excluir esta ideia?')"
            >
              ğŸ—‘ï¸ Excluir
            </button>
          </form>
        </div>
      </div>
    {{/each}}
  </div>
{{else}}
  <div class="empty-state">
    <p>ğŸ‰ Nenhuma ideia cadastrada. Que tal criar uma nova?</p>
    <a href="/ideas/new" class="btn btn-primary">Criar Primeira Ideia</a>
  </div>
{{/if}}