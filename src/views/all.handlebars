<h2 class="mb-3">Todas as Ideias</h2>

{{#if error}}
  <div class="alert alert-danger">{{error}}</div>
{{/if}}

{{#if ideas.length}}
  <div class="d-flex justify-content-end mb-3">
    <a href="/ideas/new" class="btn btn-primary">+ Nova Ideia</a>
  </div>
  <div class="row g-3">
    {{#each ideas}}
      <div class="col-12 col-sm-6 col-lg-4">
        <div class="card h-100 shadow-sm">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title mb-2">{{this.title}}</h5>
            <div class="mb-2 text-muted">
              <span class="badge text-bg-secondary">{{this.category.name}}</span>
            </div>
            <p class="card-text flex-grow-1">{{this.description}}</p>
            <div class="small text-muted">Criada por: {{this.creator.name}} em {{formatDate this.createdAt}}</div>
            <div class="d-flex flex-nowrap gap-2 align-items-center mt-3">
              <a href="/ideas/{{this.id}}" class="btn btn-primary btn-sm">ğŸ‘ï¸ Visualizar</a>
              <a href="/ideas/{{this.id}}/edit" class="btn btn-outline-primary btn-sm">âœï¸ Editar</a>
              <form class="d-inline-block m-0 flex-shrink-0" action="/ideas/{{this.id}}/delete" method="POST">
                <input type="hidden" name="_csrf" value="{{../csrfToken}}">
                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Tem certeza que deseja excluir esta ideia?')">
                  ğŸ—‘ï¸ Excluir
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{else}}
  <div class="empty-state">
    <p>ğŸ‰ Nenhuma ideia cadastrada. Que tal criar uma nova?</p>
    <a href="/ideas/new" class="btn btn-primary">Criar Primeira Ideia</a>
  </div>
{{/if}}